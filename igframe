#!/bin/sh
# igframe
# Fit image into a square frame fit for Instagram.

igframe_main() {
	scriptpath="$( realpath "$0" )"
	scriptname="$( basename "$scriptpath" )"

	e_args=16

	[ -z "$BORDER" ] && BORDER=0
	[ -z "$COLOR" ] && COLOR=white

	while getopts bBc:h opt
	do
		case $opt in
			b) BORDER=1 ;;
			B) BORDER=0 ;;
			c) COLOR="$OPTARG" ;;
			h) igframe_usage && return ;;
			*) _invalid_opt ;;
		esac
	done

	shift $(( OPTIND - 1 ))

	[ -z "$cmd" ] && cmd="process"

	case "$cmd" in
		process) "igframe_$cmd" "$@" ;;
		help|usage) igframe_usage ;;
		*) _invalid_cmd ;;
	esac

	return $?
}

igframe_process() {
	[ $# -lt 1 ] && _fatal $e_args "Must specify input."

	input="$1"
	output="$2"

	if [ -z "$output" ]
	then
		extname="$( _extname "$input" )"
		output="$( basename "$input" "$extname" )-out$extname"
	fi

	border_size=0
	[ $BORDER -ne 0 ] && border_size=5%x

	magick convert \
		-bordercolor "$COLOR" -border "$border_size" \
		-virtual-pixel background -background "$COLOR" \
		-set option:distort:viewport "%[fx:max(w,h)]x%[fx:max(w,h)]-%[fx:max((h-w)/2,0)]-%[fx:max((w-h)/2,0)]" \
		-distort SRT 0 -filter point \
		"$input" "$output"

	_echo "$output"
}

igframe_usage() {
cat <<USAGE
Usage: $scriptname [options] input [output]

Fit image into a square frame fit for Instagram.

If output name is not specified, the same name than the input will be used,
suffixed by '-out'.

Available options:

	-b        Add border, or passe-partout, around picture.
	-B        Do not add border.
	-c        Specify colour by name of hex value (e.g. #0011aa). Defaults to 'white'.
	-h        Show this help screen.

USAGE
}

_echo() {
	echo "$@"
}

_error() {
	_echo "$@" >&2
}

_extname() {
	echo "$input" | sed -E 's/^[^\.]+//'
}

_fatal() {
	exit_code="$1"
	shift
	_error "$@"
	exit "$exit_code"
}

_invalid_cmd() {
	_error "Invalid command: $cmd"
	_echo
	igframe_usage
	exit $e_args
}

_invalid_opt() {
	_error "Invalid option: $opt"
	_echo
	igframe_usage
	exit $e_args
}

igframe_main "$@"
